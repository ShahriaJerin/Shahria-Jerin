<div class="figma-grid">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>

    <div class="figma-grid-wrapper">
      {% for product in collections.frontpage.products limit: 6 %}
        <div class="figma-card">
          <img src="{{ product.featured_image | image_url: width: 400 }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
          <button class="quick-view-btn" data-handle="{{ product.handle }}">
            Quick View
          </button>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Figma Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    }
  ],
  "presets": [
    {
      "name": "Figma Grid"
    }
  ]
}
{% endschema %}
